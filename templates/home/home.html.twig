{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
<div class="chn-categoriesContainer">

    <h2>Recipes</h2>

    <section id="gallery" class="gallery">
        <div class="container-fluid">
            {% for recipe in recipes %}
                <div class="row gy-4 justify-content-center">
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <h2>{{ recipe.title }}</h2>
                        <div class="gallery-item h-100">

                            <img src="{{ asset('build/images/gallery/italian.jpg') }}" class="img-fluid" alt="">
                            <div class="gallery-links d-flex align-items-center justify-content-center">
                                <a href="{{ asset('/img/gallery/gallery-1.jpg') }}" title="Gallery 1" class="glightbox preview-link"><i class="bi bi-arrows-angle-expand"></i></a>
                                <a href="#" class="details-link"><i class="bi bi-link-45deg"></i></a>
                            </div>
                        </div>
                    </div><!-- End Gallery Item -->
                {% endfor %}
            </div>
        </div>
    </section>





</div>
{% endblock %}
