{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block section %}
<section id="hero" class="hero d-flex flex-column justify-content-center align-items-center headerColor" data-aos="fade" data-aos-delay="1500">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <h2>Welcome to Chancho</h2>
                <p>where you can share your favourite recipes to the world</p>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block body %}
<div class="chn-categoriesContainer">
    <div class="col-lg-6 text-center">
        <h2>My recipes</h2>
    </div>
    <section id="gallery" class="gallery">
        <div class="container-fluid">
            {% for recipe in recipes %}
                <div class="row gy-4 justify-content-center">
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <h2>{{ recipe.title }}</h2>
                        <div class="gallery-item h-100">
                            <img src="{{ asset('build/images/gallery/italian.jpg') }}" class="img-fluid" alt="">
                        </div>
                    </div><!-- End Gallery Item -->
                {% endfor %}
            </div>
        </div>
    </section>





</div>
{% endblock %}
